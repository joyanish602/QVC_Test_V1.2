@model UserMVC.Models.UserGroupResp

@{
    ViewData["Title"] = "Create Group";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="GroupName" class="control-label"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupMembersIds" class="control-label"></label>
                @Html.ListBoxFor(m=> m.GroupMembersIds , new MultiSelectList(Model.GroupMembers,"Value","Text"), new {@class = "form-control", multiple = "multiple", id = "UsersList"})
                <span asp-validation-for="GroupMembersIds" class="text-danger"></span>
            </div><br/>
            <div class="form-group" style="float:right;">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function (){
            $('#UsersList').multiselect();
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
